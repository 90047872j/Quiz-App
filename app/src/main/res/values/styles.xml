<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="questionsLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/mainBackgroundColor</item>

    </style>

    <style name="possibleAnswerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">@dimen/possibleAnswerTextSize</item>
    </style>

    <style name="possibleAnswerStyleRed" parent="possibleAnswerStyle">
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="possibleAnswerStyleEditText" parent="possibleAnswerStyle">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="questionStatementStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/questionStatementTextSize</item>
        <item name="android:paddingLeft">@dimen/questionStatementSidesPaddingSize</item>
        <item name="android:paddingRight">@dimen/questionStatementSidesPaddingSize</item>
        <item name="android:background">@color/backgroundSecondaryLight</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="questionLabelStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/questionLabelTextSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">@dimen/questionLabelPaddingLeftSize</item>
        <item name="android:paddingBottom">@dimen/questionLabelPaddingBottomSize</item>
        <item name="android:paddingTop">@dimen/questionLabelPaddingtopSize</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="questionLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/questionLayaoutMarginBottomSize</item>
        <item name="android:layout_marginLeft">@dimen/marginPrimary</item>
        <item name="android:layout_marginRight">@dimen/marginPrimary</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="presentationTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:layout_marginLeft">@dimen/marginPrimary</item>
        <item name="android:layout_marginRight">@dimen/marginPrimary</item>
        <item name="android:textSize">@dimen/presentationTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="presentationFirstTextStyle" parent="presentationTextStyle">
        <item name="android:layout_marginTop">@dimen/marginPrimary</item>

    </style>

    <style name="presentationSecondTextStyle" parent="presentationTextStyle">
        <item name="android:layout_marginBottom">@dimen/presentationSecondTextMarginBottomSize
        </item>
    </style>

    <style name="userNameEditTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/mainBackgroundTransparencyColor</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">textCapCharacters</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">@color/mainBackgroundColor</item>
        <item name="android:padding">@dimen/userNameEditTextPaddingSize</item>
        <item name="android:textSize">@dimen/userNameEditTextSize</item>
    </style>

    <style name="separatorTextViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">@dimen/separatorTextViewPaddingTopSize</item>
        <item name="android:layout_marginTop">@dimen/separatorTextViewMarginTopSize</item>
        <item name="android:paddingBottom">@dimen/separatorTextViewPaddingBottomSize</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:background">@color/secondaryTextColor</item>
        <item name="android:textColor">@color/mainTextColor</item>
        <item name="android:textSize">@dimen/separatorTextViewTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mainLogoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/marginPrimary</item>
        <item name="android:layout_marginLeft">@dimen/marginPrimary</item>
        <item name="android:layout_marginRight">@dimen/marginPrimary</item>
        <item name="android:layout_marginBottom">@dimen/mainLogoMarginBottomSize</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:scaleType">fitStart</item>
    </style>

    <style name="backgroundImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="radioGroupStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="buttonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/buttonMarginBottomSize</item>
        <item name="android:layout_marginTop">@dimen/marginPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:padding">@dimen/buttonPaddingSize</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="android:textSize">@dimen/buttonTextSize</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
